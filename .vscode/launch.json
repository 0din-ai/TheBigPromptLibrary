{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "idxtool-Update Logo",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.scripts/idxtool.py",
            "args": ["--update-logo", "logo.png"],
            "console": "integratedTerminal"
        },
        {
            "name": "idxtool-Rebuild TOC",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.scripts/idxtool.py",
            "args": ["--toc"],
            "console": "integratedTerminal"
        },
        {
            "name": "idxtool-Find GPT File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.scripts/idxtool.py",
            "args": ["--find-gptfile", "GPT3"],
            "console": "integratedTerminal"
        },
        {
            "name": "idxtool-Rename",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.scripts/idxtool.py",
            "args": ["--rename", "*"],
            "console": "integratedTerminal"
        }
    ]
}
